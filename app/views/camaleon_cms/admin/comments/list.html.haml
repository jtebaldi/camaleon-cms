.content-i  
  .content-box
    .element-wrapper
      %h4.element-header= t('camaleon_cms.admin.comments.comments_list_post')
      .element-box
        .table-responsive  
          %table.table.table-striped.table-hover
            %thead
              %tr
                %th= t('camaleon_cms.admin.table.id')
                %th= t('camaleon_cms.admin.table.post')
                %th= t('camaleon_cms.admin.table.post_type')
                %th= t('camaleon_cms.admin.table.comments')
                %th= t('camaleon_cms.admin.table.actions')
            %tbody
              - @posts.to_a.uniq.each do |f| post = f.decorate; post_type = f.post_type.decorate
                %tr
                  %td= f.id
                  %td
                    %a{:href => "#{post.the_url}", :target => "_blank"}= post.the_title
                  %td
                    %a{:href => "#{post_type.the_url}", :target => "_blank"}= post_type.the_title
                  %td= f.comments.main.size
                  %td
                    = link_to raw('<i class="fa fa-comments"></i>'), {action: :index, post_id: f.id }, class: "btn btn-default btn-xs cama_ajax_request", title: "#{t('camaleon_cms.admin.table.comments')}"
          = content_tag("div", raw(t('camaleon_cms.admin.message.data_found_list')), class: "alert alert-warning") if @posts.empty?
          = raw cama_do_pagination(@posts)
