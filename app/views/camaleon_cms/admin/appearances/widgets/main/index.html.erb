<script> jQuery(function(){ $("#content-widget .ajax_link, #content-sidebar .ajax_link, #new_widget_link", "#view_widget_list").ajax_modal(); }); </script>

<div class="content-i">
  <div class="content-box">
    <div class="element-wrapper" id="view_widget_list">
      <div class="element-actions">
        <a id="new_widget_link" href="<%= new_cama_admin_appearances_widgets_main_path %>" class="ajax_link btn btn-primary "><%= t('camaleon_cms.admin.widgets.create_widget') %></a>
      </div>
      <h4 class="element-header">Widgets</h4>
      <div class="element-box">
        <div class="widgets-available row">
          <% if @widgets.size > 0 %>
              <% @widgets.each do |item| %>
                  <% if item.is_simple? %>
                      <div class="panel-widget col-md-3" data-id=<%= item.id %> >
                          <div class="small-box <%= ["bg-green", "bg-aqua", "bg-yellow", "bg-red"].sample %>" data-id="<%= item.id %>">
                              <div class="inner">
                                  <h4><%= item.name %></h4>
                                  <p><%= item.excerpt %></p>
                              </div>
                              <%= link_to raw('<span class="fa fa-edit"></span>'), { action: :edit, id: item.id }, class: "ajax_link edit_link", title: "#{t('camaleon_cms.admin.button.edit')}" %>
                              <%= link_to raw('<span class="fa fa-times"></span>'), { action: :destroy, id: item.id },method: :delete, data: { confirm: t('camaleon_cms.admin.message.delete_item') }, class: "del_link", title: "#{t('camaleon_cms.admin.button.delete')}" %>
                              <div class="small-box-footer" style="font-size:11px;"><code><%= item.short_code %></code></div>
                          </div>
                      </div>
                  <% end %>
              <% end %>
          <% else %>
              <h6><%= t('camaleon_cms.admin.widgets.message.not_registered_widgets')%></h6>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>  
